{
    "name": "vscode-wsdl2rest",
    "displayName": "wsdl2rest by Red Hat",
    "description": "A VS Code extension supporting wsdl2rest via Camel Rest DSL",
    "license": "Apache-2.0",
    "version": "0.0.12",
    "publisher": "redhat",
    "icon": "icons/icon128.png",
    "preview": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/camel-tooling/vscode-wsdl2rest"
    },
    "bugs": {
        "url": "https://github.com/camel-tooling/vscode-wsdl2rest/issues"
    },
    "author": {
        "name": "Brian Fitzpatrick",
        "email": "bfitzpat@redhat.com",
        "url": "https://redhat.com"
    },
    "maintainers": [
        {
            "name": "Brian Fitzpatrick",
            "email": "bfitzpat@redhat.com",
            "url": "https://redhat.com"
        }
    ],
    "homepage": "https://github.com/camel-tooling/vscode-wsdl2rest",
    "keywords": [
        "Camel",
        "wsdl2rest",
        "SOAP",
        "Tool"
    ],
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.wsdl2rest.local",
        "onCommand:extension.wsdl2rest.url"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.wsdl2rest.local",
                "title": "wsdl2rest: Create Camel Rest DSL configuration from local WSDL file"
            },
            {
                "command": "extension.wsdl2rest.url",
                "title": "wsdl2rest: Create Camel Rest DSL configuration from WSDL file URL"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run clean && npm install",
        "preinstall": "npm run fatjar",
        "postinstall": "node ./scripts/postinstall.js && npm run compile",
        "fatjar": "mvn install -f ./wsdl2rest/pom.xml",
        "clean": "rm -rf out || rmdir out /s /q",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "node ./out/test/runTest.js",
        "lint": "tslint --project .",
        "ui-test": "extest setup-and-run out/ui-test/extension.all.test.js"
    },
    "devDependencies": {
        "@types/chai": "^4.2.7",
        "@types/mocha": "^5.2.7",
        "@types/node": "^13.5.0",
        "@types/sinon": "^7.5.1",
        "@types/vscode": "^1.41.0",
        "chai": "^4.2.0",
        "mocha": "7.0.1",
        "mocha-jenkins-reporter": "^0.4.1",
        "sinon": "^8.1.1",
        "tslint": "^6.0.0",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0",
        "vscode-extension-tester": "^2.3.0",
        "vscode-uitests-tooling": "^2.0.0"
    },
    "dependencies": {
        "chokidar": "^3.3.1",
        "expand-home-dir": "^0.0.3",
        "find-java-home": "^1.1.0",
        "fs-extra": "^8.1.0",
        "soap": "^0.30.0"
    }
}
